{
  "name": "fidj",
  "version": "2.1.12",
  "description": "fidj.ovh js framework",
  "scripts": {
    "test": "karma start ./test/karma.unit-tests.conf.js",
    "build": "npm run build:angular",
    "build:angular": "ng-packagr -p ng-package.json && gulp dist:clean",
    "build:angularjs": "tsc -p tsconfig.angularjs.json && uglifyjs dist/fidj.angularjs.js -o dist/fidj.angularjs.min.js --compress --mangle",
    "docs": "typedoc --ignoreCompilerErrors --mode file --out ./docs ./src/index.ts",
    "bump": "gulp bump"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ofidj/fidj.git"
  },
  "keywords": [
    "fidj",
    "ovh",
    "mobile",
    "angular",
    "ng",
    "ionic",
    "integration"
  ],
  "author": "fidj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ofidj/fidj/issues"
  },
  "homepage": "https://github.com/ofidj/fidj#readme",
  "dependencies": {
    "ajv": "^6.5.3",
    "pouchdb": "^7.0.0",
    "pouchdb-adapter-cordova-sqlite": "^2.0.5"
  },
  "devDependencies": {
    "@angular/cli": "^6.2.2",
    "@angular/common": "^6.1.7",
    "@angular/compiler": "^6.1.7",
    "@angular/compiler-cli": "^6.1.7",
    "@angular/core": "^6.1.7",
    "@angular/platform-browser": "^6.1.7",
    "@angular/platform-browser-dynamic": "^6.1.7",
    "@types/jasmine": "^2.8.8",
    "@types/jasmine-ajax": "^3.1.37",
    "@types/node": "*",
    "ajv": "^6.5.3",
    "async": "^2.6.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-polyfill": "^6.26.0",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-bump": "^3.1.1",
    "gulp-replace": "^1.0.0",
    "jasmine-core": "^3.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "*",
    "karma-es6-shim": "*",
    "karma-html-reporter": "*",
    "karma-jasmine": "*",
    "karma-jasmine-ajax": "*",
    "karma-jasmine-html-reporter": "*",
    "karma-jasmine-html-reporter-livereload": "*",
    "karma-phantomjs-launcher": "*",
    "karma-spec-reporter": "*",
    "karma-typescript": "*",
    "karma-typescript-angular2-transform": "*",
    "ng-packagr": "^4.1.1",
    "node-sass": "^4.9.3",
    "rxjs": "^6.3.2",
    "shx": "^0.3.2",
    "tslint": "*",
    "typedoc": "*",
    "typescript": "^2.7.2",
    "uglify-js": "*",
    "zone.js": "^0.8.26"
  },
  "ignore": [
    "**/.*",
    "*.sh",
    "_todo",
    "src",
    "docs",
    "node_modules",
    "bower_components",
    "test",
    "gulpfile.js",
    "ng-package.json",
    "tsconfig.json",
    "tslint.json"
  ],
  "angularjsDependencies": {
    "angular": "^1.5.3",
    "angular-mocks": "^1.5.3"
  },
  "angularjsMain": "fidj.angularjs.js"
}
